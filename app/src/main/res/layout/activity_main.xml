<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#131E2B">
    <TextView
            android:text="Target Word"
            android:layout_width="350dp"
            android:layout_height="50dp" android:id="@+id/TargetTextShower"
            android:fontFamily="@font/coustard"
            android:contentDescription="@string/material_motion_easing_accelerated" android:textSize="24sp"
            android:background="#A7F5F8" android:textAlignment="center" android:textStyle="bold"
            android:textColor="#640DEF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginTop="28dp" app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:text="Word-1"
            android:layout_width="250dp"
            android:layout_height="40dp" android:id="@+id/shuffleword1"
            android:fontFamily="@font/coustard"
            android:textColor="#640DEF" android:textAlignment="center" android:textSize="20sp"
            android:textStyle="bold" android:background="#FCF86E05"
            app:layout_constraintTop_toBottomOf="@+id/TargetTextShower" android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:text="Word-2"
            android:layout_width="250dp"
            android:layout_height="40dp" android:id="@+id/shuffleWord2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" android:fontFamily="@font/coustard"
            android:textColor="#640DEF" android:textAlignment="center" android:textSize="20sp"
            android:textStyle="bold" android:background="#FCF86E05"
            app:layout_constraintTop_toBottomOf="@+id/shuffleword1"
            app:layout_constraintBottom_toTopOf="@+id/shuffleWord3"/>
    <TextView
            android:text="Word-3"
            android:layout_width="250dp"
            android:layout_height="40dp" android:id="@+id/shuffleWord3"
            android:fontFamily="@font/coustard" android:textColor="#640DEF" android:textAlignment="center"
            android:textStyle="bold" android:textSize="20sp" android:background="#FCF86E05"
            app:layout_constraintBottom_toTopOf="@+id/TargetButton"
            android:layout_marginBottom="52dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Get Target Word"
            android:layout_width="350dp"
            android:layout_height="80dp" android:id="@+id/TargetButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button2" android:layout_marginBottom="20dp"/>
    <Button
            android:text="Get Shuffle word"
            android:layout_width="350dp"
            android:layout_height="80dp" android:id="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginBottom="56dp"
    />
    <TextView
            android:text="Guess The Word Game"
            android:layout_width="360dp"
            android:layout_height="50dp" android:id="@+id/textView5"
            android:fontFamily="serif" android:includeFontPadding="true" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textColor="#640DEF"
            app:layout_constraintHorizontal_bias="0.5" android:textAlignment="center"
            android:textSize="24sp" android:textStyle="bold|italic" android:background="#A7F5F8"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="44dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>